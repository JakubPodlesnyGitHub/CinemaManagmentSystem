<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

    <session-factory>

        <!-- Database H2 connection settings-->
        <property name="connection.driver_class">org.h2.Driver</property>
        <property name="connection.url">jdbc:h2:mem:db1;DB_CLOSE_DELAY=-1</property>
        <property name="connection.username">sa</property>
        <property name="connection.password"></property>
        <property name="dialect">org.hibernate.dialect.H2Dialect</property>

        <!-- Database MSSQL Connection Settings
        <property name="connection.url">jdbc:sqlserver://localhost\\HPOMENJAKUB:1433;databaseName=CinemaProject
        </property>
        <property name="connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
        <property name="connection.username">CinemaProjectLogin</property>
        <property name="connection.password">admin</property>
        <property name="dialect">org.hibernate.dialect.SQLServerDialect</property>-->

        <!-- JDBC connection pool (use the built-in) -->
        <property name="connection.pool_size">1</property>

        <!-- Echo all executed SQL to stdout -->
        <property name="show_sql">true</property>
        <!-- auto create model -->
        <property name="hbm2ddl.auto">create</property>
        <!-- Enable Hibernate stats in the logs -->
        <property name="hibernate.generate_statistics">false</property>

        <!-- Full names the annotated entity class -->
        <mapping class="Model.Address"/>
        <mapping class="Model.SysRole"/>
        <mapping class="Model.ProgramUser"/>
        <mapping class="Model.Movie"/>
        <mapping class="Model.Booking"/>
        <mapping class="Model.Ticket"/>
        <mapping class="Model.CinemaScrenning"/>
    </session-factory>

</hibernate-configuration>